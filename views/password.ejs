<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Change Password - <%= user %></title>
    <%- include('head') %>
  </head>
  <body>
    <div class="container" id="content">
      <h1>Hello <%= user %></h1>
      <p><a href="./">Back to user page</a></p>

      <h3>Change your password</h3>
      <form method="POST">
        <label>
          <div>Old password</div>
          <input type="password" name="old-password" />
        </label>
        <label>
          <div>New password</div>
          <input type="password" name="password" />
        </label>
        <label>
          <div>New password again</div>
          <input type="password" name="password2" />
        </label>
        <div id="message"><%= message %></div>
        <input type="submit" value="Change" name="change" />
      </form>
    </div>


    <script>
      // post password to pathname of current page
      const new_password = (body) => {
        fetch(location.pathname, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(body),
        })
          .then((response) => {
            console.log("response:", response);

            // check for auth failure for rejected credentials
            if (response.status === 401) return false;

            // check for auth failure for other reasons
            if (response.status !== 200) return false;

            // auth okay
            return response.json();
          })
          .then((data) => {
            console.log("data", data);

            const message = document.getElementById('message');
            if (!data) {
              message.innerText = 'Failed to change password';
            } else if (data.status === 'success') {
              message.innerText = 'Password was changed successfully';
            } else if (data.status === 'empty') {
              message.innerText = 'New password must not be empty';
            } else if (data.status === 'wrong') {
              message.innerText = 'Old password is incorrect';
            } else if (data.status === 'typo') {
              message.innerText = 'New passwords are not the same!';
            } else {
              message.innerText = 'Unrecognised result: '+data.status;
            }

          })
          .catch((e) => {
            console.error(e);
            const message = document.getElementById('message');
            message.innerText = 'Failed to change password';
          });
      };

      const form = document.querySelector('form');
      form.addEventListener('submit', (event) => {
        event.preventDefault();
        const message = document.getElementById('message');
        message.innerText = 'Changing password...';
        const data = new FormData(event.currentTarget);
        const body = Object.fromEntries(data.entries());
        new_password(body);
      });
    </script>
  </body>
</html>
